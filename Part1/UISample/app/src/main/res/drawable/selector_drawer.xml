<selector android:id="@+id/selector_drawer" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Non focused states -->
    <item android:state_focused="false" android:state_selected="false" android:state_pressed="false" android:drawable="@android:color/white" />
    <item android:state_focused="false" android:state_selected="true" android:state_pressed="false" android:drawable="@android:color/white" />

    <!-- Focused states -->
    <item android:state_focused="true" android:state_selected="false" android:state_pressed="false" android:drawable="@android:color/holo_blue_bright" />
    <item android:state_focused="true" android:state_selected="true" android:state_pressed="false" android:drawable="@android:color/holo_blue_bright" />

    <!-- Pressed -->
    <item android:state_pressed="true" android:drawable="@android:color/holo_blue_bright" />
</selector>